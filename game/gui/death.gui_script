function on_input(self, action_id, action)
	if action_id == hash("touch") and action.released and GAME_STATE.state == "game_over" then
		if gui.pick_node(self.main_menu, action.x, action.y) then
			msg.post("main:/handler", "show_menu")
		elseif  gui.pick_node(self.restart_game, action.x, action.y) then
			print("Всё заново")
		end
		if gui.pick_node(self.restart_game, action.x, action.y) then
			msg.post("main:/handler", "restart_game")
		end
	end
end

