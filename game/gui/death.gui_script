local GAME_STATE = require "game.core.game_state"
local GAME_OVER = hash("game_over")

function init(self)
	self.main_menu = gui.get_node("main_menu/box")
	self.restart_game = gui.get_node("again/box")

	if GAME_STATE.get_state() == "game" then
		self.game_over = false -- игра не закончена
		gui.set_enabled(self.main_menu, true) 
		gui.set_enabled(self.restart_game, true) 
		msg.post(".", "release_input_focus")
	end
end

function final(self)
	msg.post(".", "release_input_focus")
end

